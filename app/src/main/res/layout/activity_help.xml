<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context=".HelpActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- App Logo -->
            <ImageView
                android:id="@+id/wheelChairImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wheelchair"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"/>

            <!-- App Title -->
            <TextView
                android:id="@+id/wheelChairTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WheelChair+"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:fontFamily="@font/vintagebrush"
                android:textColor="#2F71BD"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"/>

            <!-- Introduction -->
            <TextView
                android:id="@+id/introText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WheelChair+ is an advanced wheelchair project designed to enhance comfort, functionality, and accessibility for users. This help page provides guidance on the project’s features, usage, and troubleshooting."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Features Title -->
            <TextView
                android:id="@+id/featuresTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Features"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#2F71BD"
                android:layout_marginBottom="8dp"/>

            <!-- Features List -->
            <TextView
                android:id="@+id/featuresList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. User Interface (UI): Provides a user-friendly experience for controlling wheelchair settings. \n\n
                              2. Real-time GPS Tracking: Allows users and caregivers to monitor location. \n\n
                              3. Smart Speed Control: Automatically adjusts speed based on terrain and obstacles. \n\n
                              4. Battery Efficiency Monitoring: Displays estimated battery life and alerts for charging. \n\n
                              5. Secure Login and User Profiles: Users can log in and save personalized settings."
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <!-- Troubleshooting Title -->
            <TextView
                android:id="@+id/troubleshootingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Troubleshooting"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#2F71BD"
                android:layout_marginBottom="8dp"/>

            <!-- Troubleshooting List -->
            <TextView
                android:id="@+id/troubleshootingList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. **Login Issues**: If you can’t log in, try resetting your password via the app’s settings. \n\n
                              2. **Slow Response**: Ensure the system is updated to the latest version. \n\n
                              3. **Connectivity Problems**: Check WiFi/Bluetooth and restart the device if necessary."
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <!-- Future Enhancements Title -->
            <TextView
                android:id="@+id/futureEnhancementsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Future Enhancements"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#2F71BD"
                android:layout_marginBottom="8dp"/>

            <!-- Future Enhancements List -->
            <TextView
                android:id="@+id/futureEnhancementsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Improved AI-assisted navigation with obstacle avoidance. \n\n
                              • Advanced voice control integration. \n\n
                              • Real-time health monitoring and fall detection."
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

            <!-- Contact Support -->
            <TextView
                android:id="@+id/contactSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For additional support, contact the development team at support@wheelchairplus.com."
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
