<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundapp1"
    android:paddingTop="50dp"
    android:gravity="center"> <!-- Centrer le contenu -->

    <TextView
        android:id="@+id/myTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/vintagebrush"
        android:text="         WheelChair++"
        android:textColor="#2F71BD"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
        android:src="@drawable/wheelchair" />

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#2F71BD"
        android:text="Ouvrir la caméra"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnGPS"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#2F71BD"
        android:text="Ouvrir le GPS"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnTemperature"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#2F71BD"
        android:text="Afficher la température"
        android:textColor="@android:color/white" />
</LinearLayout>

